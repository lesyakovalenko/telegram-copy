{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["./node_modules/@types/**/*",
    "./src/**/*",
    "./src/**/**/*",
    "./src/*",
  ],
}
